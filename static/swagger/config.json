  ],
  "paths": {
    "/contacts": {
      "get": {
        "tags": [
          "contact"
        ],
        "summary": "Retrieve all contacts",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "contact"
        ],
        "summary": "Create a contact",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "format": "int64",
                    "example": 1
                  },
                  "name": {
                    "type": "string",
                    "example": "John"
                  },
                  "lastname": {
                    "type": "string",
                    "example": "Doe"
                  },
                  "mail": {
                    "type": "string",
                    "example": "john.doe@mail.com"
                  },
                  "phone": {
                    "type": "string",
                    "example": "809-256-5744"
                  }
                },
                "required": [
                  "id",
                  "name",
                  "lastname",
                  "mail",
                  "phone"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": [
          "contact"
        ],
        "summary": "Retrieve specific contact",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
